<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.main.MainActivity">

    <ImageButton
            android:id="@+id/request_style_transfer_button"
            android:scaleType="fitCenter"
            android:src="@drawable/starry_night"
            android:layout_width="@dimen/frame_preview_size"
            android:layout_height="@dimen/frame_preview_size"
            android:layout_margin="@dimen/small_margin"
            android:contentDescription="@string/request_style_transfer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/request_style_transfer"
            app:layout_constraintEnd_toEndOf="@+id/request_style_transfer_button"
            app:layout_constraintStart_toStartOf="@+id/request_style_transfer_button"
            app:layout_constraintTop_toBottomOf="@+id/request_style_transfer_button" />

</androidx.constraintlayout.widget.ConstraintLayout>